<center>
  <h1> List of Books
</h1>


<table>
  <thead>
    <tr>
      <th>Book Title </th>
      <th> Available </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.name %></td>
        <td><%= !book.is_checked_out %>

        <% if !book.is_checked_out? %>
        <td><%= link_to "Checkout", book_check_out_path(book) %></td>
        <% end %>
      </tr>
      <% end %>
  </tbody>
</table>

<h1>
  <%= link_to "Check-in a book", checkin_path %>

</h1>
</center>
